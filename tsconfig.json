{
  "compilerOptions": {
    "module": "ESNext",                
    "moduleResolution": "Node",  
    "allowSyntheticDefaultImports": true,    
    "target": "ES2020",                 
    "esModuleInterop": true,           
    "skipLibCheck": true,                
    "sourceMap": true,                   
    "outDir": "./dist"                   
  },
  "include": ["src/**/*.ts"],             // Incluye todos los archivos .ts en la carpeta src
  "exclude": ["node_modules"]             // Excluye la carpeta node_modules
}
